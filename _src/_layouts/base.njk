<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>{{ metadata.title }}</title>
		<meta property="og:site_name" content="{{ metadata.title }}">

		<meta name="description" content="{{ metadata.description }}">

		<!-- Twitter Card Stuff: -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="{{ metadata.author.twitter }}">
		<meta property="og:site_name" content="{{ metadata.title }}">
		<meta property="og:title" content="{{ metadata.title }}">
		<meta property="og:url" content="{{ page.url }}">
		<meta property="og:description" content="{{ lede }}">
		<meta property="og:image" content="/_assets/img/book-tease.gif">
		<meta property="og:image:alt" content="Cover of {{ title | safe }}, published by A Book Apart, written by {{ byline | safe }}.">
		<meta property="og:type" content="article">
		<meta name="author" content="{{ metadata.author.name }}">

		<link rel="stylesheet" href="/_assets/css/style.css">

		{% if metadata.color %}
		<style type="text/css">
			a {
				color: {{ metadata.color }};
			}
			a:focus {
				outline: 2px dotted rgba(0,0,0,.8);
			}
			.site-foot {
				background: {{ metadata.colordark }};
			}
			.blurbs blockquote + blockquote:before {
				background: {{ metadata.color }};
			}

			.site-foot a {
				text-decoration-color: {{ metadata.color }};
			}
			.cta {
				color: #fff;
				border: 2px solid {{ metadata.color }};
				background: {{ metadata.color }};
				text-shadow: 1px 1px 0 {{ metadata.colordark }};
			}
			.cta:hover,
			.cta:focus {
				border-color: {{ metadata.colordark }};
				background: {{ metadata.color }};
			}
			.site-foot {
				background: {{ metadata.colordark }};
			}
		</style>
		{% endif %}
	</head>
